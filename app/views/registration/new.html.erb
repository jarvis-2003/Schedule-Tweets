<%if @user%>
<div class = "alert alert-danger" role = "alert">
<%@user.errors.full_messages.each do |message|%>
<%=message%><br>
<%end%>
</div>
<%end%>
<%= form_with url: registration_path ,data: {turbo:false} do |form| %>
<div class = "mb-3">
<%=form.text_field :email , placeholder:"Email",class:"form-control"%>
</div>
<div class = "mb-3">
<%=form.password_field :password , placeholder:"password",class:"form-control"%>
</div>
<div class = "mb-3">
<%=form.password_field :password_confirmation , placeholder:"confirm password",class:"form-control"%>
</div>
<%=form.submit "Sign up" ,class:"btn btn-primary"%>
<%end%>